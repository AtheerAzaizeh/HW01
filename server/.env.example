# Server Environment Variables

# Port (Render sets this automatically)
PORT=5000

# MongoDB Connection
# For local: mongodb://localhost:27017/blakv
# For Atlas: mongodb+srv://username:password@cluster.mongodb.net/blakv?retryWrites=true&w=majority
MONGODB_URI=mongodb://localhost:27017/blakv

# JWT Configuration
# Generate a secure key for production: openssl rand -hex 64
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRE=7d

# Production Settings
NODE_ENV=development

# Frontend URL for CORS (set this to your Netlify URL in production)
# Example: https://blakv-store.netlify.app
FRONTEND_URL=
